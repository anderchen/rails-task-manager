
<div class="container">

  <h1>Edit Task</h1>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control"%>
    </div>

    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="completed-checkbox-edit">
      <label for="completed-checkbox" class="form-check-label">Completed </label>
    </div>

    <%= f.submit class: "btn btn-primary"%>


  <% end %>
</div>
