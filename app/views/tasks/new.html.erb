<div class="container">
  <h1>Create a new task</h1>

  <form action="/tasks" method="post" class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="title">Title: </label>
    <input type="text" name="task[title]" id="title" class="form-control">

    <label for="details">Details: </label>
    <input type="text" name="task[details]" id="details" class="form-control">

    <input type="submit">


   <div class="link">
      <%= link_to "Back to list", tasks_path %>
    </div>
  </form>
</div>
